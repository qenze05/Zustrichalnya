<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minWidth="-Infinity" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.smakab.datingapp.zustrichalnya.Controllers.Profile.Content.ViewsController">
    <children>
        <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets left="0.0" top="0.0" />
            </HBox.margin>
            <content>
                <VBox minHeight="980.0" prefWidth="1920.0" spacing="10.0" styleClass="background-padding" stylesheets="@../../../../../../../styles.css">
                    <children>
                  <HBox alignment="CENTER_LEFT" prefWidth="600.0" spacing="10.0">
                     <children>
                        <Label prefWidth="200.0" text="Релігія">
                           <font>
                              <Font size="20.0" />
                           </font>
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Label>
                        <TextField fx:id="religionField" prefHeight="30.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" prefWidth="600.0" spacing="10.0">
                     <children>
                        <Label prefWidth="200.0" text="Мова спілкування">
                           <font>
                              <Font size="20.0" />
                           </font>
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Label>
                        <TextField fx:id="langField" prefHeight="30.0" />
                     </children>
                  </HBox>
                        <HBox alignment="CENTER_LEFT">
                            <VBox.margin>
                                <Insets top="20.0" />
                            </VBox.margin>
                            <children>
                                <Label text="Громадянські рухи">
                                    <font>
                                        <Font size="25.0" />
                                    </font>
                                </Label>
                                <Button mnemonicParsing="false" onAction="#addMovement" styleClass="add-button" stylesheets="@../../../../../../../styles.css" text="+">
                                    <HBox.margin>
                                        <Insets left="20.0" />
                                    </HBox.margin>
                                    <font>
                                        <Font size="20.0" />
                                    </font>
                                </Button>
                            </children>
                        </HBox>
                        <FlowPane fx:id="movementsContainer" hgap="5.0" maxWidth="1.7976931348623157E308" vgap="5.0">
                        </FlowPane>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
      <VBox prefWidth="400.0" spacing="25.0">
         <children>
            <Button fx:id="saveButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#saveForm" prefHeight="50.0" styleClass="photo-button" stylesheets="@../../../../../../../styles.css" text="Зберегти">
               <VBox.margin>
                  <Insets left="50.0" right="50.0" />
               </VBox.margin>
               <font>
                  <Font size="20.0" />
               </font>
            </Button>

         </children>
         <padding>
            <Insets top="25.0" />
         </padding>
      </VBox>
    </children>
</HBox>
